{
  "name": "react-performance",
  "title": "React Performance",
  "version": "1.0.0",
  "description": "React Performance Workshop",
  "keywords": [],
  "homepage": "http://react-performance.netlify.com/",
  "license": "GPL-3.0-only",
  "main": "src/index.js",
  "engines": {
    "node": ">=8",
    "npm": ">=6",
    "yarn": ">=1"
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@testing-library/jest-dom": "^4.2.0",
    "@testing-library/react": "^9.2.0",
    "chalk": "^2.4.2",
    "downshift": "^3.4.0",
    "history": "^4.10.1",
    "match-sorter": "^4.0.2",
    "preval.macro": "^3.0.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-window": "^1.8.5",
    "stop-runaway-react-effects": "^1.2.0",
    "use-interval": "^1.1.0",
    "vanilla-tilt": "^1.7.0",
    "workerize": "^0.1.7"
  },
  "devDependencies": {
    "cross-spawn": "^7.0.1",
    "eslint": "^6.6.0",
    "husky": "^3.0.9",
    "inquirer": "^7.0.0",
    "is-ci": "^2.0.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.17.1",
    "react-scripts": "^3.2.0",
    "replace-in-file": "^4.2.0",
    "serve": "^11.2.0",
    "workerize-loader": "^1.1.0"
  },
  "scripts": {
    "serve": "serve -s build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:profile": "react-scripts build --profile",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "npm run test -- --watchAll=false --coverage",
    "test:exercises": "npm run test -- testing.*exercises\\/ --onlyChanged",
    "setup": "node ./scripts/setup && npm run validate && node ./scripts/autofill-feedback-email.js",
    "lint": "eslint .",
    "validate": "npm-run-all --parallel build test:coverage lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/exercises-final/**/*.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  }
}
